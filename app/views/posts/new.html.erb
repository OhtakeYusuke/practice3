<h1>新規作成</h1>

<%= link_to '一覧に戻る', posts_path %>

<% @post.errors.full_messages.each do |message| %>
<%= message %>
<% end %>

<%= form_with model: @post, url: confirm_new_post_path, local: true do |f|  %>
<div>
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div>
  <%= f.label :description %>
  <%= f.text_field :description %>
</div>
<%= f.submit nil %>
<% end %>
