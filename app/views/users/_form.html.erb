
<% user.errors.full_messages.each do |message| %>
  <%= message %>
<% end %>

<%= form_with model: user, local: true do |f| %>
<div>
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div>
  <%= f.label :email %>
  <%= f.text_field :email %>
</div>
<div>
  <%= f.label :password %>
  <%= f.password_field :password %>
</div>
<%= f.submit nil %>
<% end %>
